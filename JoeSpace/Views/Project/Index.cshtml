@model IEnumerable<Project>
@{
    ViewData["Title"] = "Index";
}

@*<h1>Project List</h1>*@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Project List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Project" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> &nbsp;Create New Project
            </a>
        </div>
    </div>
    <br />
</div>
<table class="table projects" style = "width:100%">
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">@obj.ProjectName</td>
                <td width="30%">@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Project" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> &nbsp;Edit</a>
                        <a asp-controller="Project" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> &nbsp;Delete</a>
                    </div>
                </td>
                
            </tr>
        }
    </tbody>
</table>